void setup() {
  pinMode(8, OUTPUT);
}

void loop() {
  // A) digitalWrite() 방식
  digitalWrite(8, HIGH);
  digitalWrite(8, LOW);

  // B) 포트 직접 접근
  PORTB |=  (1 << PB0); // D8 HIGH
  PORTB &= ~(1 << PB0); // D8 LOW
}

